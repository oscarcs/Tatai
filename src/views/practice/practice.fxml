<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane 
      maxHeight="-Infinity" 
      maxWidth="-Infinity" 
      minHeight="-Infinity" 
      minWidth="-Infinity"
      styleClass="normalBackground" 
      stylesheets="@../style.css"
      xmlns="http://javafx.com/javafx/8.0.60"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="views.practice.Practice"
>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <children>
                
                <HBox alignment="CENTER" styleClass="headingBox">
                    <children>
                        <Label styleClass="heading2" text="Practice Mode" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <TextField 
                                    fx:id="number" 
                                    prefWidth="100" 
                                    prefHeight="100" 
                                    alignment="CENTER" 
                                    styleClass="headingTextField"
                                />
                                <Label alignment="CENTER" text="Number" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER">
                    <children>
                        <Button 
                            fx:id="startBtn" 
                            onAction="#startHit" 
                            text="Practice"
                            styleClass="narrowButton" 
                        />
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>
