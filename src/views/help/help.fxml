<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane 
    maxHeight="-Infinity" 
    maxWidth="-Infinity" 
    minHeight="-Infinity" 
    minWidth="-Infinity" 
    styleClass="normalBackground" 
    xmlns="http://javafx.com/javafx/8.0.60" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="views.help.Help"
>
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <top>
        <HBox alignment="CENTER" styleClass="headingBox">
            <children>
                <Label text="Help" styleClass="heading3" />
            </children>
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button 
                    fx:id="overview" 
                    onAction="#setOverview"
                    styleClass="narrowButton" 
                    text="Overview" 
                />
                <Button 
                    fx:id="play" 
                    onAction="#setPlay" 
                    styleClass="narrowButton" 
                    text="Play" 
                />
                <Button 
                    fx:id="quiz" 
                    onAction="#setQuiz" 
                    styleClass="narrowButton" 
                    text="Quiz" 
                />
                <Button 
                    fx:id="dashboard" 
                    onAction="#setDashboard" 
                    styleClass="narrowButton" 
                    text="Dashboard" 
                />
            </children>
        </VBox>
    </left>

    <center>
        <VBox styleClass="leftSpacingBox">        
            <children>
                <TextArea 
                    fx:id="text" 
                    text="Text" 
                    prefWidth="300"
                />
            </children>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" styleClass="topSpacingBox">
            <children>
                <Button fx:id="pronunciation" onAction="#setPronunciation" text="Pronunciation" />
            </children>
        </VBox>
    </bottom>
</BorderPane>
