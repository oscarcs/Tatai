<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane 
    maxHeight="-Infinity" 
    maxWidth="-Infinity" 
    minHeight="-Infinity" 
    minWidth="-Infinity"
    styleClass="normalBackground" 
    stylesheets="@../style.css" 
    xmlns="http://javafx.com/javafx/8.0.60" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="views.make_quiz.MakeQuiz"
>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <children>
                <HBox alignment="CENTER" styleClass="headingBox">
                    <children>
                        <Label styleClass="heading3" text="Create New Quiz"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="questionNum" text="Label" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <TextField 
                                    prefWidth="100" 
                                    prefHeight="100" 
                                    fx:id="firstNum" 
                                    alignment="CENTER" 
                                    styleClass="headingTextField"
                                />
                                <Label alignment="CENTER" text="Number" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <TextField 
                                    prefWidth="100" 
                                    prefHeight="100" 
                                    fx:id="operation"
                                    alignment="CENTER" 
                                    styleClass="headingTextField"
                                />
                                <Label alignment="CENTER" text="Operator (+-*/)" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <TextField 
                                    prefWidth="100" 
                                    prefHeight="100" 
                                    fx:id="secondNum" 
                                    alignment="CENTER" 
                                    styleClass="headingTextField"
                                />
                                <Label alignment="CENTER" text="Number" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <Button 
                            fx:id="nextBtn" 
                            onAction="#nextHit" 
                            text="Next"
                            styleClass="narrowButton" 
                        />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
