<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane 
    fx:id="borderPane" 
    maxHeight="-Infinity" 
    maxWidth="-Infinity"
    minHeight="500.0" 
    minWidth="750.0" 
    prefHeight="500.0" 
    prefWidth="750.0" 
    styleClass="normalBackground" 
    xmlns="http://javafx.com/javafx/8.0.60" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="views.main_container.MainContainer"
>
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
    
    <top>
        <HBox
            styleClass="menuBackground" 
            BorderPane.alignment="CENTER"
        >
            <children>
                <VBox styleClass="titleBox">
                    <children>
                        <Text 
                            styleClass="titleText" 
                            strokeType="OUTSIDE" 
                            strokeWidth="0.0" 
                            text="TÄtai!"
                        />
                    </children>
                </VBox>
                <HBox>
                    <children>
                        <Button 
                            fx:id="dashboardButton" 
                            onAction="#dashboardHit"
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="0"
                            text="Dashboard" 
                        />
                        <Button 
                            fx:id="playButton" 
                            onAction="#playHit" 
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="1"
                            text="Play"
                        />
                        <Button 
                            fx:id="quizButton"
                            onAction="#quizHit" 
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="2" 
                            text="Quiz"
                        /> 
                        <Button 
                            fx:id="practiceButton"
                            onAction="#practiceHit" 
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="3" 
                            text="Practice"
                        /> 
                        <Button 
                            fx:id="helpButton" 
                            onAction="#helpHit" 
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="4"
                            text="Help" 
                        />
                        <Button 
                            fx:id="logoutButton" 
                            onAction="#logoutHit"
                            style="-fx-text-fill: -color-accent !important;" 
                            styleClass="menuButton" 
                            GridPane.columnIndex="5"
                            text="Logout" 
                        />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
</BorderPane>
